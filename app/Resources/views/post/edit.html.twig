{% extends 'back.html.twig' %}
{% block breadcrumb %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="">Tableau de bord</a>
		</li>
		<li class=" breadcrumb-item">
			<a href="">Liste des postes</a>
		</li>
		<li class=" breadcrumb-item active">
			{{ post.title }}</li>
	</ol>
{% endblock %}
{% block body %}
	<h3>{{ post.title }}</h3>

	{{ form_start(edit_form) }}
	<div class="row">
		<div class="col-8">

			<div class="form-group">
				{{ form_row(edit_form.title, {'attr' : {'class' : 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_row(edit_form.slug, {'attr' : {'class' : 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_row(edit_form.description, {'attr' : {'class' : 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_row(edit_form.body, {'attr' : {'class' : 'form-control'}})}}
			</div>
		</div>
		<div class="col-4">
		<div class="form-group">
				{{ form_row(edit_form.image, {'attr' : {'class' : 'file-control'}})}}
			</div>
			<div class="form-group">
				{{ form_row(edit_form.datepublish, {'attr' : {'class' : 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_row(edit_form.categories, {'attr' : {'class' : 'form-control'}})}}
			</div>


			<input class="btn btn-danger" type="submit" value="Editer"/>
			<a class="btn btn-secondary" href="{{ path('admin_post_index') }}">Retour</a>
		</div>
	</div>
	{{ form_end(edit_form) }}


{% endblock %}
